<% form_for @payment,:url => share_payments_path(current_share) do |p|-%>
	<%= p.text_field :value, :value => "amount" %>
	<%= select_tag (:payee_id,options_for_select(@other_users.map {|u| [u.username,u.id]})) %>
	<%= hidden_field_tag :share_id, current_share.id %>
	<%= p.submit 'Save' %>
<% end -%>